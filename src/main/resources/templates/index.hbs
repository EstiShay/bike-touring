{{#partial "content"}}

    <h4>Add a new item:</h4>
    <form action="/allitems" method="post">
        <div class=""form-group>
            <label for="item-name">Enter the item name/type:</label>
            <input id="item-name" name="item-name" type="text" class="form-control">
        </div>
        <div class="form-group">
            <label for="manufacturer">Enter the manufacturer:</label>
            <input id="manufacturer" name="manufacturer" type="text" class="form-control">
        </div>
        <div class="form-group">
            <label for="model-name">Enter the model:</label>
            <input id="model-name" name="model-name" type="text" class="form-control">
        </div>
        <div class="form-group">
            <label for="weight">Enter the weight:</label>
            <input id="weight" name="weight" type="number" class="form-control">
        </div>
        <div class="form-group">
            <label for="price">Enter the price:</label>
            <input id="price" name="price" type="number" class="form-control">
        </div>

        <button type="submit" class="btn btn-primary">Add it!</button>
    </form>


{{/partial}}

{{> layout.hbs}}